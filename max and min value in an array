
#include <iostream>

using namespace std;
void MaxMin(int arr[], int size)
{
    //for maximum vlaue approach
    int max=arr[0];
    for(int i=0;i<size;i++)
    {
        if(max<arr[i])
        max=arr[i];
    }
    cout<<"maximum elment is "<<max<<endl;
    
    //for minimum value find
    int min=arr[0];
    for(int i=0;i<size;i++)
    {
        if(min>arr[i])
        min=arr[i];
    }
    cout<<"minimum elment is "<<min<<endl;
}

int main()
{
    int arr[]={2,4,6,3,10};
    int n=sizeof(arr)/sizeof(arr[0]);
    MaxMin(arr,n);

    return 0;
}
